{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "nvcc",
            "args": [
                "${file}",
                "-g",
                "-G",
                "-O0",
                "-D_DEBUG",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // for debug
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },

